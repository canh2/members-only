<!-- app/views/posts/index.html.erb -->

<h1>All Posts</h1>

<% @posts.each do |post| %>
  <div>
    <%= post.content %>
    <% if user_signed_in? %>
      <span>Posted by: <%= post.user.email %></span>
    <% end %>
  </div>
<% end %>

<% if user_signed_in? %>
  <%= link_to "New Post", new_post_path %>
<% end %>
